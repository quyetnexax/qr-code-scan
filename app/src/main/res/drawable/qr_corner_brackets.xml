<?xml version="1.0" encoding="utf-8"?>
<!-- QR Frame with 4 corner brackets -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Top Left Corner -->
    <item android:gravity="top|left">
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="4dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:gravity="top|left">
        <shape android:shape="rectangle">
            <size android:width="4dp" android:height="40dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    
    <!-- Top Right Corner -->
    <item android:gravity="top|right">
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="4dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:gravity="top|right">
        <shape android:shape="rectangle">
            <size android:width="4dp" android:height="40dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    
    <!-- Bottom Left Corner -->
    <item android:gravity="bottom|left">
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="4dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:gravity="bottom|left">
        <shape android:shape="rectangle">
            <size android:width="4dp" android:height="40dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    
    <!-- Bottom Right Corner -->
    <item android:gravity="bottom|right">
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="4dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:gravity="bottom|right">
        <shape android:shape="rectangle">
            <size android:width="4dp" android:height="40dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>
